<% include partials/header %>
<div class="ui main text container segment">

  <div class="ui huge header">Edit '<%=curBlog.title%>'</div>
  <form action="/blogs/<%= curBlog._id %>?_method=PUT" method="POST" class = "ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= curBlog.title %>">
    </div>
    <div class="field">
      <label>Image Url</label>
      <input type="text" name="blog[image]" placeholder="image" value="<%= curBlog.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]"><%= curBlog.body %></textarea>
    </div>
    <input type="submit" class="ui violet big basic button">
  </form>



<% include partials/footer %>
